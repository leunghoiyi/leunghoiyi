    <script>
      function book() {
        let name = prompt("What is your name?");
        if (name.length === 0) {
          alert("Sorry, please enter your name.");
        } else {
          let email = prompt("What is your email address?");
          if (email.length === 0) {
            alert("Sorry, please enter your email address.");
          } else {
            let city = prompt("Which city would you like to go?");
            if (city.length === 0) {
              alert(
                "Sorry, please enter the name of the city that you want to go."
              );
            } else {
              alert(
                "Thank you, " +
                  name +
                  "! You will receive an email from us. See you in " +
                  city +
                  "!"
              );
            }
          }
        }
      }

      let bookButton = document.querySelector("button");
      bookButton.addEventListener("click", book);
    </script>
